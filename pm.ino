// sizeof gives the number of bytes, each int value is composed of two bytes (16 bits)
// there are two values per note (pitch and duration), so for each note there are four bytes
int notes = sizeof(furElyse) / sizeof(furElyse[0]) / 2; //use Fur Elise because it has fewer notes

// this calculates the duration of a whole note in ms
int wholenote = (60000 * 4) / tempo;

int divider = 0, noteDuration = 0;

dht DHT;

LiquidCrystal lcd(12, 11, 5, 4, 3, 2);

const int PulseWire = A1;
const int LED13 = 13;     // The on-board Arduino LED, close to PIN 13.
int Threshold = 530;      // Determine which Signal to "count as a beat" and which to ignore.
// Use the "Gettting Started Project" to fine-tune Threshold Value beyond default setting.
// Otherwise leave the default "550" value.

int ledPin = 9; //led pin

PulseSensorPlayground pulseSensor;  // Creates an instance of the PulseSensorPlayground object called "pulseSensor"

void setup() {

  Serial.begin(9600);
  lcd.begin(16, 2); // configure LCD display

  pinMode(ledPin, OUTPUT);

  // Configure the PulseSensor object.
  pulseSensor.analogInput(PulseWire);
  pulseSensor.blinkOnPulse(LED13);  // blink Arduino's LED with heartbeat.
  pulseSensor.setThreshold(Threshold);

  // Double-check the "pulseSensor" object was created and "began" seeing a signal.
  if (pulseSensor.begin()) {
    Serial.println("We created a pulseSensor Object !");  //This prints one time at Arduino power-up, or on Arduino reset.
    lcd.setCursor(0, 0);
    lcd.print(" Proiect ");
    lcd.setCursor(0, 1);
    lcd.print(" jmeker ");
  }
}

//used to track which song was played last time
enum previousSong {eDoom, eFurElyse, eNone};

//used to reset melody if BMP is back to normal
int resetMelody = 0;

void loop() {
  int thisNote = 0;
  previousSong prev = eNone;

  // iterate over the notes of the melody.
  // Remember, the array is twice the number of notes (notes + durations)
  while (thisNote < notes * 2) {
    int myBPM = pulseSensor.getBeatsPerMinute(); // Calls function on our pulseSensor object that returns BPM as an "int".

    if (pulseSensor.sawStartOfBeat()) { // Check to see if "a beat happened".
      lcd.clear();
      DHT.read11(DHT_APIN); //read temperature

      //print temperature on display
      lcd.setCursor(3, 0);
      lcd.print("TMP: ");
      lcd.print(DHT.temperature);
      lcd.print(" C");

      //print bpm on disllay
      lcd.setCursor(5, 1);
      lcd.print("BPM: ");
      lcd.print(myBPM);
    }

    // print temperature to serial monitor
    Serial.println("Temperature");
    Serial.print(DHT.temperature);
    Serial.println(" C");

    // print bpm to serial monitor
    Serial.println("♥ A HeartBeat Happened ! ");
    Serial.print("BPM: ");
    Serial.println(myBPM);
    
    if (resetMelody) {
      // reset melody
      thisNote = 0;
      resetMelody = 0;
    }

    // calculates the duration of each note
    divider = pgm_read_word_near(furElyse+thisNote + 1);
    if (divider > 0) {
      // regular note, just proceed
      noteDuration = (wholenote) / divider;
    } else if (divider < 0) {
      // dotted notes are represented with negative durations!!
      noteDuration = (wholenote) / abs(divider);
      noteDuration *= 1.5; // increases the duration in half for dotted notes
    }

    //turn on the LED if BMP values are too low or too high
    if (myBPM < 50 || myBPM >= 100) {
      digitalWrite(ledPin, 1);
    } else {
      digitalWrite(ledPin, 0);
    }

    //play Fur Elysia 
    if (myBPM >= 100) {
      if (prev == eDoom) {
        thisNote = 0; //if previous song was different reset note index
      }
      prev = eFurElyse;
      // we only play the note for 90% of the duration, leaving 10% as a pause
      tone(buzzer, pgm_read_word_near(furElyse+thisNote), noteDuration * 0.9);
      Serial.println("Playing Fur Elise");
    }

    //play Doom
    if (myBPM < 50) {
      if (prev == eFurElyse) {
        thisNote = 0; //if previous song was different reset note index
      }
      prev = eDoom;
      // we only play the note for 90% of the duration, leaving 10% as a pause
      tone(buzzer, pgm_read_word_near(doom+thisNote), noteDuration * 0.9);
      Serial.println("Playing Doom");
    }

    // Wait for the specified duration before playing the next note.
    delay(noteDuration);

    // stop the waveform generation before the next note.
    noTone(buzzer);

    if (myBPM >= 100 || myBPM < 50) {
      // progress melody
      thisNote += 2;
    } else {
      // BMP back to normal values
      resetMelody = 1;
    }
  }

